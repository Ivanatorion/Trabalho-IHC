<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="12dp"
    android:background="@drawable/app_background"
    tools:context="com.lambsoft.smartslides.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smart Slides"
        android:textSize="36sp"
        android:id="@+id/text1"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:text="@string/TakePhotos"
        android:id="@+id/bTakePhotos"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/text1"
        android:padding="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:onClick="onTakePhotosButtonClick"
        android:background="@drawable/button_take_photos"
        style="?android:attr/borderlessButtonStyle"
        />

    <Button
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:text="@string/ViewSlides"
        android:id="@+id/bViewSlides"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:padding="15dp"
        android:layout_below="@+id/bTakePhotos"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="onViewSlidesButtonClick"
        android:background="@drawable/button_view_slides"
        style="?android:attr/borderlessButtonStyle"
        />

    <Button
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:text="@string/settings"
        android:textSize="32sp"
        android:textColor="#ffffff"
        android:padding="15dp"
        android:layout_below="@+id/bViewSlides"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="onAddCadeira"
        android:visibility="visible"
        android:background="@drawable/but_enable"
        style="?android:attr/borderlessButtonStyle"
        />


</RelativeLayout>
